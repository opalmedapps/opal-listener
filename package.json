{
  "name": "opal-listener",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "docs": "run-script-os",
    "docs:nix": "./node_modules/.bin/jsdoc src README.md -c docs/jsdoc.config.json",
    "docs:windows": ".\\node_modules\\.bin\\jsdoc src README.md -c docs/jsdoc.config.json",
    "test": "cross-env DISABLE_LOGGING=true mocha './src/**/*.test.*' './listener/**/*.test.*' './legacy-registration/**/*.test.*'",
    "coverage": "nyc mocha './src/**/*.test.*' './listener/**/*.test.*' './legacy-registration/**/*.test.*'",
    "start": "node src/server.js",
    "watch": "nodemon src/server.js",
    "watch:docker": "nodemon -L src/server.js",
    "simulateRequest": "node src/test/simulate-request/simulate-request.js",
    "simulateRequestDocker": "docker exec opal-listener node src/test/simulate-request/simulate-request.js"
  },
  "dependencies": {
    "@stablelib/base64": "2.0.1",
    "@stablelib/utf8": "2.0.1",
    "axios": "1.13.2",
    "cross-env": "10.1.0",
    "crypto-js": "4.2.0",
    "dicom-parser": "1.8.7",
    "dotenv": "17.2.3",
    "express-validator": "7.3.0",
    "firebase-admin": "13.5.0",
    "html-to-text": "9.0.5",
    "keyv": "5.5.4",
    "moment": "2.30.1",
    "mysql": "2.18.1",
    "nodemailer": "7.0.10",
    "nodemon": "3.1.10",
    "q": "1.5.1",
    "three": "0.127.0",
    "tweetnacl": "1.0.3",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.5.0",
    "chai": "6.2.1",
    "chai-as-promised": "8.0.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsdoc": "61.2.1",
    "eslint-plugin-mocha": "11.2.0",
    "firebase-tools": "14.25.0",
    "globals": "16.5.0",
    "jsdoc": "4.0.5",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "run-script-os": "1.1.6",
    "sinon": "21.0.0"
  },
  "keywords": [
    "opal",
    "health",
    "oncology"
  ],
  "author": "Opal Health Informatics Group",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://www.opalmedapps.com",
  "description": "Backend listener for the Opal patient portal and registration"
}
