{
  "rules": {
    "things": {
      ".validate": "newData.exists() && newData.hasChildren() && newData.hasChild('new-thing')",
      "$thing": {
        ".validate": "newData.hasChildren(['bookID', 'email', 'ownerID', 'status'])",
        ".write": "auth.uid === newData.child('ownerID').val()",
        "bookID": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "ownerID": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    }
  }
}
